                            @*         } *@
                            @*     </select> *@
                            @* </div> *@
                            @* <div class="col-md-3"> *@
                            @*     <select @bind="Issue.Author"> *@
                            @*         <option value="">-- انتخاب کنید --</option> *@
                            @*         <option value="1">باز</option> *@
                            @*         <option value="2">بسته</option> *@
