@page "/issues"
@page "/issues/{ProjectId:int}"
@using GitManager.Interface
@inject IIssueService IssueService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

@* <a href="/issues/create/@projectId" class="btn btn-primary">Create New Issue</a> *@
<h3>موارد برای پروژه @(ProjectId > 0 ? ProjectId.ToString() : "نا مشخص ")</h3>

<div class="mb-12">
    <EditForm Model="Issue" OnValidSubmit="@SearchIssues" FormName="searchIssues">
        <DataAnnotationsValidator />
        <div class="row g-3 align-items-end director">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="projectId">شناسه پروژه</label>
                    <InputNumber id="projectId" @bind-Value="Issue.ProjectId" class="form-control" placeholder="شناسه پروژه را وارد کنید" tabindex="1" required />
                    <ValidationMessage For="() => Issue.ProjectId" class="validation-message" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="stateFilter">وضعیت</label>
                    <select id="stateFilter" class="form-control" @bind="@SelectedState" tabindex="2">
                        <option value="All">همه</option>
                        <option value="Opened">فعال</option>
                        <option value="Closed">غیرفعال</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100" tabindex="3">جست و جو</button>
            </div>
        </div>
    </EditForm>
</div>


<table class="table">
    <thead>
        <tr class="director">
            <th>شناسه</th>
            <th>عنوان</th>
            <th>وضعیت</th>
            <th>جزِییات</th>
        </tr>
    </thead>
    <tbody>
        @if (IssuesList != null)
        {@if(IssuesList.Count() >0){
            @foreach (var issue in IssuesList)
            {
                <tr class="director">
                    <td>@issue.IssueId</td>
                    <td>@issue.Title</td>
                    @* <td>@issue.State</td> *@
                    <td>
                        @* <a href="/issues/@ProjectId/@issue.IssueId" class="btn btn-info">View</a> *@
                        @* <a href="/issues/edit/@ProjectId/@issue.IssueId" class="btn btn-warning">Edit</a> *@
                        @if (issue.State == "opened")
                        {
                            <button class="btn btn-danger" @onclick="() => CloseIssue(Convert.ToInt32(issue.IssueId))">غیرفعال</button>
                        }
                        else if (issue.State == "closed")
                        {
                            <button class="btn btn-success" @onclick="() => OpenIssue(Convert.ToInt32(issue.IssueId))">فعالسازی</button>
                        }
                    </td>
                    <td>
                        <button @onclick="ToggleDetails" class="btn btn-primary">@(showDetails ? "Less" : "More")</button>
                    </td>
                </tr>
            }
        }
                }
    </tbody>
</table>

@if (showDetails)
{

}
<h3>ایجاد مورد جدید برای پروژه @(ProjectId > 0 ? ProjectId.ToString() : "نا مشخص")</h3>

<form @onsubmit="CreateIssue">
    <div class="form-group director">
        <label for="title">Title:</label>
        <input type="text" id="title" class="form-control" @bind="Title" required />
    </div>
    <div class="form-group">
        <label for="description">Description:</label>
        <textarea id="description" class="form-control" @bind="Description"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>



<h3>ویرایش مورد @IssueIid برای پروژه @ProjectId</h3>

<form @onsubmit="UpdateIssue">
    <div class="form-group director">
        <label for="title">Title:</label>
        <input type="text" id="title" class="form-control" @bind="Title" required />
    </div>
    <div class="form-group">
        <label for="description">Description:</label>
        <textarea id="description" class="form-control" @bind="Description"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>

@* <a href="/issues/@ProjectId/@IssueIid" class="btn btn-secondary">Back to Issue</a> *@



@* <h3>Issue @Issue.IssueId: @Issue.Title</h3> *@

<div>
    @* <p><strong>State:</strong> @Issue.State</p> *@
    <p><strong>Description:</strong> @Issue.Description</p>
</div>

@* <a href="/issues/@ProjectId" class="btn btn-secondary">Back to List</a> *@
@* <a href="/issues/edit/@ProjectId/@IssueIid" class="btn btn-warning">Edit</a> *@



<style>
    *{
        direction: rtl;
    }
    .director {
        direction: rtl;
    }

    .btn{
        min-width:80px;
    }

    .form-group {
        position: relative;
        margin-bottom: 1.5rem; /* Ensure space for validation message */
    }

    .validation-message {
        color: red;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
        min-height: 1.5rem; /* Reserve space to prevent layout shift */
    }

    .form-control:invalid {
        border-color: red;
    }
</style>
